<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context="com.example.aseniuk.aseniuk_countbook.MainActivity"
    android:gravity="center|top">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/AddCounterButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:text="Add Counter"
            android:layout_marginBottom="60dp"
            android:onClick="addCounterButtonClicked"
            android:layout_weight="0.1"
            android:textStyle="bold"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="right"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of counters: "
            android:textSize="20sp"
            android:id="@+id/firstTextBox"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="100sp"
            android:id="@+id/counterTextView"/>


    </LinearLayout>


</LinearLayout>
